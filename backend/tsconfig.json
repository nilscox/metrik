{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,

    "outDir": "./dist",
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"]
    },

    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "lib": [],

    "strict": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  }
}
