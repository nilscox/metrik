{
  "name": "metrik-backend",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "nest build",
    "start": "nodemon -w yarn.lock -w tsconfig.json -w .env -w src -e env,json,ts -x 'yarn ts-node src/main.ts'",
    "lint": "eslint src",
    "test": "mocha",
    "test:coverage": "nyc yarn test",
    "ts-node": "node -r ts-node/register -r tsconfig-paths/register",
    "typeorm": "yarn ts-node node_modules/.bin/typeorm",
    "db:reset": "rm -f db.sqlite && yarn db:migrate",
    "db:migrate": "yarn ts-node src/sql/run-migrations.ts",
    "db:diagram": "yarn ts-node node_modules/.bin/typeorm-uml ormconfig.js"
  },
  "dependencies": {
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/typeorm": "^8.0.3",
    "bcrypt": "^5.0.1",
    "better-sqlite3": "^7.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.2.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.5.4",
    "typeorm": "^0.2.41",
    "typeorm-snake-naming-strategy": "^1.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.6",
    "@nestjs/testing": "^8.2.6",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/dotenv-safe": "^8.1.2",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.17",
    "@types/supertest": "^2.0.11",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.11.0",
    "@typescript-eslint/parser": "^5.11.0",
    "eslint": "^8.8.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "expect": "^27.5.1",
    "jest-mock": "^27.5.1",
    "mocha": "^9.2.0",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "prettier": "^2.3.2",
    "supertest": "^6.2.2",
    "ts-node": "^10.5.0",
    "tsconfig-paths": "^3.10.1",
    "typeorm-uml": "^1.6.4",
    "typescript": "^4.5.5"
  }
}
