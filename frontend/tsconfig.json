{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "sourceMap": true,

    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@dtos/*": ["../dtos/*"]
    },

    "moduleResolution": "node",
    "esModuleInterop": true,

    "skipLibCheck": true,
    "lib": ["ES2020"],

    "strict": true,

    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "../dtos/**/*.ts"]
}
