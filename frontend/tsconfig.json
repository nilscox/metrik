{
  "compilerOptions": {
    "target": "es6",
    "module": "ESNext",
    "sourceMap": true,

    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "~/*": ["src/*"],
      "@shared/*": ["../shared/*"]
    },

    "moduleResolution": "node",
    "esModuleInterop": true,

    "skipLibCheck": true,
    "lib": ["ES2020", "DOM"],

    "strict": true,

    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "../shared/**/*", ".storybook/*"]
}
